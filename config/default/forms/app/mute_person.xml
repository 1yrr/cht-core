<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Create new person under clinic and mute this person</h:title>
    <model>
      <instance>
        <mute_new_person delimiter="#" id="mute_new_person" prefix="J1!mute_new_person!" version="2016-12-21">
          <inputs>
            <source>user</source>
            <source_id/>
            <contact>
              <_id/>
              <name/>
              <parent>
                <_id/>
                <parent>
                  <_id/>
                </parent>
              </parent>
            </contact>
          </inputs>

          <place_id/>
          <place_name/>
          <meta>
            <instanceID/>
          </meta>

          <!-- the new clinic -->
          <new_person db-doc="true">
            <name tag="hidden"/>
            <sex tag="hidden"/>
            <date_of_birth tag="hidden"/>
            <parent tag="hidden">
              <_id/>
              <parent tag="hidden">
                <_id/>
                <parent tag="hidden">
                  <_id/>
                </parent>
              </parent>
            </parent>
            <type tag="hidden"/>
            <created_by_doc db-doc-ref="/mute_new_person" tag="hidden"/>
          </new_person>

          <!--  the mute clinic report -->
          <mute_person db-doc="true" tag="hidden">
            <form/>
            <type/>
            <content_type/>
            <fields>
              <patient_uuid db-doc-ref="/mute_new_person/new_person"/>
            </fields>
            <created_by_doc db-doc-ref="/mute_new_person"/>
          </mute_person>


        </mute_new_person>
      </instance>
      <bind nodeset="/mute_new_person/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/mute_new_person/inputs/source" type="string"/>
      <bind nodeset="/mute_new_person/inputs/source_id" type="string"/>
      <bind nodeset="/mute_new_person/inputs/contact/_id" type="db:clinic" required="true()"/>
      <bind nodeset="/mute_new_person/inputs/contact/name" type="string"/>
      <bind calculate="/mute_new_person/inputs/contact/_id" nodeset="/mute_new_person/place_id" type="string"/>
      <bind calculate="/mute_new_person/inputs/contact/name" nodeset="/mute_new_person/place_name" type="string"/>

      <bind nodeset="/mute_new_person/new_person/name" type="string" required="true()"/>
      <bind nodeset="/mute_new_person/new_person/type" calculate="'person'" type="string"></bind>
      <bind nodeset="/mute_new_person/new_person/parent/_id" calculate="/mute_new_person/inputs/contact/_id" type="string"></bind>
      <bind nodeset="/mute_new_person/new_person/parent/parent/_id" calculate="/mute_new_person/inputs/contact/parent/_id" type="string"></bind>
      <bind nodeset="/mute_new_person/new_person/parent/parent/parent/_id" calculate="/mute_new_person/inputs/contact/parent/parent/_id" type="string"></bind>

      <bind nodeset="/mute_new_person/mute_person/form" calculate="'mute_person'" type="string"></bind>
      <bind nodeset="/mute_new_person/mute_person/type" calculate="'data_record'" type="string"></bind>
      <bind nodeset="/mute_new_person/mute_person/content_type" calculate="'xml'" type="string"></bind>

      <bind calculate="concat('uuid:', uuid())" nodeset="/mute_new_person/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/mute_new_person/inputs">
      <label>Health center</label>
      <input appearance="hidden" ref="/mute_new_person/inputs/source">
        <label>Source</label>
      </input>
      <input appearance="hidden" ref="/mute_new_person/inputs/source_id">
        <label>Source ID</label>
      </input>
      <group ref="/mute_new_person/inputs/contact">
        <input appearance="db-object" ref="/mute_new_person/inputs/contact/_id">
          <label>What is the name of the Clinic?</label>
          <hint>Select a place from list</hint>
        </input>
        <input appearance="hidden" ref="/mute_new_person/inputs/contact/name">
          <label>Name</label>
        </input>

        <input ref="/mute_new_person/new_person/name">
          <label>New person's name</label>
        </input>
      </group>
    </group>
  </h:body>
</h:html>