<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Create new clinic, new persons under clinic and new person under health center and mute new clinic</h:title>
    <model>
      <instance>
        <mute_new_clinic_two_persons_plus_hc delimiter="#" id="mute_new_clinic_two_persons_plus_hc" prefix="J1!mute_new_clinic_two_persons_plus_hc!" version="2016-12-21">
          <inputs>
            <source>user</source>
            <source_id/>
            <contact>
              <_id/>
              <name/>
              <parent>
                <_id/>
                <contact>
                  <phone/>
                  <name/>
                </contact>
              </parent>
            </contact>
          </inputs>

          <place_id/>
          <place_name/>
          <meta>
            <instanceID/>
          </meta>

          <!-- the new clinic -->
          <new_clinic db-doc="true">
            <name tag="hidden"/>
            <parent tag="hidden">
              <_id/>
              <parent tag="hidden">
                <_id/>
              </parent>
            </parent>
            <type tag="hidden"/>
            <created_by_doc db-doc-ref="/mute_new_clinic_two_persons_plus_hc" tag="hidden"/>
          </new_clinic>

          <!-- the new person -->
          <new_person db-doc="true">
            <name tag="hidden"/>
            <sex tag="hidden"/>
            <date_of_birth tag="hidden"/>
            <parent tag="hidden">
              <_id db-doc-ref="/mute_new_clinic_two_persons_plus_hc/new_clinic"/>
              <parent tag="hidden">
                <_id/>
                <parent tag="hidden">
                  <_id/>
                </parent>
              </parent>
            </parent>
            <type tag="hidden"/>
            <created_by_doc db-doc-ref="/mute_new_clinic_two_persons_plus_hc" tag="hidden"/>
          </new_person>

          <!-- the new person -->
          <other_new_person db-doc="true">
            <name tag="hidden"/>
            <sex tag="hidden"/>
            <date_of_birth tag="hidden"/>
            <parent tag="hidden">
              <_id db-doc-ref="/mute_new_clinic_two_persons_plus_hc/new_clinic"/>
              <parent tag="hidden">
                <_id/>
                <parent tag="hidden">
                  <_id/>
                </parent>
              </parent>
            </parent>
            <type tag="hidden"/>
            <created_by_doc db-doc-ref="/mute_new_clinic_two_persons_plus_hc" tag="hidden"/>
          </other_new_person>

          <!-- the new person -->
          <hc_new_person db-doc="true">
            <name tag="hidden"/>
            <sex tag="hidden"/>
            <date_of_birth tag="hidden"/>
            <parent tag="hidden">
              <_id/>
              <parent tag="hidden">
                <_id/>
              </parent>
            </parent>
            <type tag="hidden"/>
            <created_by_doc db-doc-ref="/mute_new_clinic_two_persons_plus_hc" tag="hidden"/>
          </hc_new_person>

          <!--  the mute clinic report -->
          <mute_clinic db-doc="true" tag="hidden">
            <form/>
            <type/>
            <content_type/>
            <fields>
              <place_id db-doc-ref="/mute_new_clinic_two_persons_plus_hc/new_clinic"/>
            </fields>
            <created_by_doc db-doc-ref="/mute_new_clinic_two_persons_plus_hc"/>
          </mute_clinic>
          <mute_clinic_doc db-doc-ref=" /mute_new_clinic_two_persons_plus_hc/mute_clinic "/>


        </mute_new_clinic_two_persons_plus_hc>
      </instance>
      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/inputs/source" type="string"/>
      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/inputs/source_id" type="string"/>
      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/inputs/contact/_id" type="db:health_center" required="true()"/>
      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/inputs/contact/name" type="string"/>
      <bind calculate="/mute_new_clinic_two_persons_plus_hc/inputs/contact/_id" nodeset="/mute_new_clinic_two_persons_plus_hc/place_id" type="string"/>
      <bind calculate="/mute_new_clinic_two_persons_plus_hc/inputs/contact/name" nodeset="/mute_new_clinic_two_persons_plus_hc/place_name" type="string"/>

      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/new_person/name" type="string" required="true()"/>
      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/new_person/type" calculate="'person'" type="string"></bind>
      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/new_person/parent/parent/_id" calculate="/mute_new_clinic_two_persons_plus_hc/inputs/contact/_id" type="string"></bind>
      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/new_person/parent/parent/parent/_id" calculate="/mute_new_clinic_two_persons_plus_hc/inputs/contact/parent/_id" type="string"></bind>

      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/other_new_person/name" type="string" required="true()"/>
      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/other_new_person/type" calculate="'person'" type="string"></bind>
      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/other_new_person/parent/parent/_id" calculate="/mute_new_clinic_two_persons_plus_hc/inputs/contact/_id" type="string"></bind>
      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/other_new_person/parent/parent/parent/_id" calculate="/mute_new_clinic_two_persons_plus_hc/inputs/contact/parent/_id" type="string"></bind>

      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/hc_new_person/name" type="string" required="true()"/>
      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/hc_new_person/type" calculate="'person'" type="string"></bind>
      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/hc_new_person/parent/_id" calculate="/mute_new_clinic_two_persons_plus_hc/inputs/contact/_id" type="string"></bind>
      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/hc_new_person/parent/parent/_id" calculate="/mute_new_clinic_two_persons_plus_hc/inputs/contact/parent/_id" type="string"></bind>

      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/new_clinic/type" calculate="'clinic'" type="string"></bind>
      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/new_clinic/name" calculate="concat(/mute_new_clinic_two_persons_plus_hc/new_person/name, ' clinic')" type="string"></bind>
      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/new_clinic/parent/_id" calculate="/mute_new_clinic_two_persons_plus_hc/inputs/contact/_id" type="string"></bind>
      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/new_clinic/parent/parent/_id" calculate="/mute_new_clinic_two_persons_plus_hc/inputs/contact/parent/_id" type="string"></bind>

      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/mute_clinic/form" calculate="'mute_clinic'" type="string"></bind>
      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/mute_clinic/type" calculate="'data_record'" type="string"></bind>
      <bind nodeset="/mute_new_clinic_two_persons_plus_hc/mute_clinic/content_type" calculate="'xml'" type="string"></bind>

      <bind calculate="concat('uuid:', uuid())" nodeset="/mute_new_clinic_two_persons_plus_hc/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/mute_new_clinic_two_persons_plus_hc/inputs">
      <label>Health center</label>
      <input appearance="hidden" ref="/mute_new_clinic_two_persons_plus_hc/inputs/source">
        <label>Source</label>
      </input>
      <input appearance="hidden" ref="/mute_new_clinic_two_persons_plus_hc/inputs/source_id">
        <label>Source ID</label>
      </input>
      <group ref="/mute_new_clinic_two_persons_plus_hc/inputs/contact">
        <input appearance="db-object" ref="/mute_new_clinic_two_persons_plus_hc/inputs/contact/_id">
          <label>What is the name of the Health center?</label>
          <hint>Select a place from list</hint>
        </input>
        <input appearance="hidden" ref="/mute_new_clinic_two_persons_plus_hc/inputs/contact/name">
          <label>Name</label>
        </input>

        <input ref="/mute_new_clinic_two_persons_plus_hc/new_person/name">
          <label>First person in clinic name</label>
        </input>

        <input ref="/mute_new_clinic_two_persons_plus_hc/other_new_person/name">
          <label>Second person in clinic name</label>
        </input>

        <input ref="/mute_new_clinic_two_persons_plus_hc/hc_new_person/name">
          <label>Person under health center</label>
        </input>
      </group>
    </group>
  </h:body>
</h:html>
